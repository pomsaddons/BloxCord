<Window x:Class="BloxCord.Client.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#101010" Foreground="White"
        ResizeMode="NoResize"
        WindowStyle="None">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#F5F5F5" />
            <Setter Property="Background" Value="#2A2A2A" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent" Height="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border" Width="44" Height="24" CornerRadius="12" Background="#333333" BorderBrush="#555555" BorderThickness="1">
                                <Ellipse x:Name="Ellipse" Width="20" Height="20" Fill="White" HorizontalAlignment="Left" Margin="1"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#34C759"/> <!-- iOS Green -->
                                <Setter TargetName="Border" Property="BorderBrush" Value="#34C759"/>
                                <Setter TargetName="Ellipse" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <StackPanel>
                    <!-- Connection Settings -->
                    <TextBlock Text="Connection" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#CCCCCC"/>
                    
                    <TextBlock Text="Backend URL" FontWeight="SemiBold" FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding BackendUrl, UpdateSourceTrigger=PropertyChanged}" Padding="8" FontSize="13" Margin="0,0,0,10"/>

                    <TextBlock Text="Roblox Username" FontWeight="SemiBold" FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Padding="8" FontSize="13" Margin="0,0,0,10" IsReadOnly="True" Background="#1A1A1A" Foreground="#888888"/>

                    <TextBlock Text="Job ID" FontWeight="SemiBold" FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding JobId, UpdateSourceTrigger=PropertyChanged}" Padding="8" FontSize="13" Margin="0,0,0,10" IsReadOnly="True" Background="#1A1A1A" Foreground="#888888"/>

                    <TextBlock Text="Roblox User Id" FontWeight="SemiBold" FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" Padding="8" FontSize="13" Margin="0,0,0,10" IsReadOnly="True" Background="#1A1A1A" Foreground="#888888"/>

                    <Button Content="Load from Roblox Logs" Click="LoadSession_Click" Margin="0,0,0,20" HorizontalAlignment="Left" Width="160" Visibility="Collapsed"/>

                    <!-- Appearance Settings -->
                    <TextBlock Text="Appearance" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#CCCCCC"/>
                
                    <CheckBox x:Name="GradientCheckBox" Content="Use Gradient Background" IsChecked="True" Margin="0,0,0,15"/>
                
                    <StackPanel x:Name="GradientPanel" Visibility="Visible">
                        <TextBlock Text="Gradient Colors (Hex)" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="0,0,5,0">
                                <TextBlock Text="Start" FontSize="12" Foreground="#888888"/>
                                <TextBox x:Name="GradientStartInput" Text="#050505" Padding="5" Background="#202020" Foreground="White" BorderBrush="#404040"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="End" FontSize="12" Foreground="#888888"/>
                                <TextBox x:Name="GradientEndInput" Text="#1C1C1C" Padding="5" Background="#202020" Foreground="White" BorderBrush="#404040"/>
                            </StackPanel>
                        </Grid>
                        <Button Content="Apply Gradient" Margin="0,10,0,0" Click="ApplyGradient_Click"/>
                    </StackPanel>

                    <StackPanel x:Name="ColorPanel" Visibility="Collapsed">
                        <TextBlock Text="Solid Background Color (Hex)" Margin="0,0,0,5"/>
                        <TextBox x:Name="ColorInput" Text="#020617" Padding="5" Background="#202020" Foreground="White" BorderBrush="#404040"/>
                        <Button Content="Apply Color" Margin="0,10,0,0" Click="ApplyColor_Click"/>
                    </StackPanel>

                    <!-- Identity / Flags -->
                    <TextBlock Text="Identity" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="#CCCCCC"/>
                    <TextBlock Text="Country Code (e.g. US, GB, JP)" FontWeight="SemiBold" FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding CountryCode, UpdateSourceTrigger=PropertyChanged}" Padding="8" FontSize="13" Margin="0,0,0,10"/>

                    <TextBlock Text="Preferred Language (e.g. en, es, fr)" FontWeight="SemiBold" FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding PreferredLanguage, UpdateSourceTrigger=PropertyChanged}" Padding="8" FontSize="13" Margin="0,0,0,10"/>

                    <TextBlock Text="User Token (for edit/delete)" FontWeight="SemiBold" FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,4"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding UserToken, UpdateSourceTrigger=PropertyChanged}" Padding="8" FontSize="13" Margin="0,0,8,0"/>
                        <Button Grid.Column="1" Content="Mint" Click="MintToken_Click" Width="70"/>
                    </Grid>

                    <CheckBox Content="Enable E2EE direct messages" IsChecked="{Binding EnableE2eeDirectMessages, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <!-- Channel -->
                    <TextBlock Text="Channel" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="#CCCCCC"/>
                    <TextBlock Text="Vote Language (e.g. en, es, fr)" FontWeight="SemiBold" FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,4"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="VoteLanguageInput" Padding="8" FontSize="13" Margin="0,0,8,0"/>
                        <Button Grid.Column="1" Content="Vote" Click="VoteLanguage_Click" Width="70"/>
                    </Grid>

                    <TextBlock Text="Custom Emojis" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="#CCCCCC"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Open custom_emojis.json" Click="OpenCustomEmojis_Click" Margin="0,0,8,0"/>
                        <Button Content="Reload" Click="ReloadCustomEmojis_Click" Width="90"/>
                    </StackPanel>

                    <!-- About -->
                    <TextBlock Text="About" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="#CCCCCC"/>
                    <TextBlock Text="RoChat (Build 0.6.0)" Foreground="#DDDDDD"/>
                    <TextBlock Text="Made with ❤️ by pom. Open Source @ github.com/pomsaddons/rochat" Foreground="#AAAAAA" TextWrapping="Wrap" Margin="0,6,0,0"/>

                    <Button Content="Donate" Click="Donate_Click" Margin="0,12,0,0" HorizontalAlignment="Left" Width="120"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Close" Click="Close_Click" Width="80"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
